<ui:FluentWindow x:Class="Quintilink.Views.MainWindow"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:Quintilink.ViewModels"
      xmlns:converters="clr-namespace:Quintilink.Converters"
    xmlns:local="clr-namespace:Quintilink.Behaviors"
        mc:Ignorable="d"
  Title="TCP Tester" Height="500" Width="1100"
   Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
  ExtendsContentIntoTitleBar="True"
  WindowStyle="None"
    ResizeMode="CanResize"
         d:DataContext="{d:DesignInstance Type=vm:MainViewModel}">

    <ui:FluentWindow.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:BooleanToStateTextConverter x:Key="StateTextConverter"/>

        <SolidColorBrush x:Key="OverlayBrush" Color="#80FFFFFF"/>

        <Style x:Key="HeaderIconButtonStyle" TargetType="ui:Button">
            <Setter Property="Background" Value="{StaticResource OverlayBrush}"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="HeaderPrimaryButtonStyle" TargetType="ui:Button" BasedOn="{StaticResource HeaderIconButtonStyle}">
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="LogFilterCheckBoxStyle" TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="{Binding Title}" Icon="Send24" FontSize="14" FontWeight="SemiBold" />

        <!-- Connection settings -->
        <ui:Card Grid.Row="1" Margin="10,10,10,2">
            <Grid Margin="6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Connection Mode -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                    <RadioButton Content="TCP Client" GroupName="ConnectionMode" VerticalAlignment="Center"
                                 IsChecked="{Binding IsClientMode, Mode=TwoWay}">
                        <RadioButton.Style>
                            <Style TargetType="RadioButton" BasedOn="{StaticResource {x:Type RadioButton}}">
                                <Setter Property="IsEnabled" Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </RadioButton.Style>
                    </RadioButton>

                    <RadioButton Content="TCP Server" IsChecked="{Binding IsServerMode}" GroupName="ConnectionMode" VerticalAlignment="Center">
                        <RadioButton.Style>
                            <Style TargetType="RadioButton" BasedOn="{StaticResource {x:Type RadioButton}}">
                                <Setter Property="IsEnabled" Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsSerialMode}" Value="True">
                                        <Setter Property="IsChecked" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </RadioButton.Style>
                    </RadioButton>

                    <RadioButton Content="Serial Port" IsChecked="{Binding IsSerialMode}" GroupName="ConnectionMode" VerticalAlignment="Center">
                        <RadioButton.Style>
                            <Style TargetType="RadioButton" BasedOn="{StaticResource {x:Type RadioButton}}">
                                <Setter Property="IsEnabled" Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </RadioButton.Style>
                    </RadioButton>
                </StackPanel>

                <!-- Connection Settings -->
                <Grid Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,12,0">
                    <!-- TCP Settings -->
                    <StackPanel Orientation="Horizontal">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSerialMode}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <TextBox Width="150" Text="{Binding Host}" VerticalAlignment="Center" Margin="0,0,6,0" ToolTip="Host">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsServerMode}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <TextBox Width="70" Text="{Binding Port}" VerticalAlignment="Center" ToolTip="Port">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </StackPanel>

                    <!-- Serial Port Settings -->
                    <StackPanel Orientation="Horizontal">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSerialMode}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <ComboBox Width="Auto" MinWidth="70" ItemsSource="{Binding AvailableSerialPorts}" SelectedItem="{Binding SelectedSerialPort}" VerticalAlignment="Center" Margin="0,0,6,0" ToolTip="Serial port">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>

                        <ui:Button Command="{Binding RefreshSerialPortsCommand}" ToolTip="Refresh serial ports" Padding="4" Background="Transparent" VerticalAlignment="Center" Margin="0,0,6,0">
                            <ui:Button.Style>
                                <Style TargetType="ui:Button">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ui:Button.Style>
                            <ui:SymbolIcon Symbol="ArrowSync16" FontSize="16"/>
                        </ui:Button>

                        <ComboBox Width="Auto" MinWidth="60" ItemsSource="{Binding BaudRates}" SelectedItem="{Binding SelectedBaudRate}" Margin="0,0,6,0" VerticalAlignment="Center" ToolTip="Baud">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>

                        <ComboBox Width="Auto" MinWidth="50" ItemsSource="{Binding ParityOptions}" SelectedItem="{Binding SelectedParity}" Margin="0,0,6,0" VerticalAlignment="Center" ToolTip="Parity">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>

                        <ComboBox Width="Auto" MinWidth="40" ItemsSource="{Binding DataBitsOptions}" SelectedItem="{Binding SelectedDataBits}" Margin="0,0,6,0" VerticalAlignment="Center" ToolTip="Data bits">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>

                        <ComboBox Width="Auto" MinWidth="80" ItemsSource="{Binding StopBitsOptions}" SelectedItem="{Binding SelectedStopBits}" VerticalAlignment="Center" ToolTip="Stop bits">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <!-- Actions + Status -->
                <WrapPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" ItemHeight="32">
                    <ui:Button Command="{Binding ConnectCommand}" ToolTip="Connect" Style="{StaticResource HeaderPrimaryButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="PlugConnected24" FontSize="16" Margin="0,0,6,0"/>
                            <TextBlock Text="Connect" FontSize="11" FontWeight="SemiBold"/>
                        </StackPanel>
                    </ui:Button>

                    <ui:Button Command="{Binding DisconnectCommand}" ToolTip="Disconnect" Style="{StaticResource HeaderPrimaryButtonStyle}" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="PlugDisconnected24" FontSize="16" Margin="0,0,6,0"/>
                            <TextBlock Text="Disconnect" FontSize="11" FontWeight="SemiBold"/>
                        </StackPanel>
                    </ui:Button>

                    <ui:Button Command="{Binding ShowStatisticsCommand}" ToolTip="View connection statistics" Background="Transparent" VerticalAlignment="Center" Padding="6,4" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="DataBarVertical24" FontSize="16" Margin="0,0,4,0"/>
                            <TextBlock Text="Stats" FontSize="11" FontWeight="SemiBold"/>
                        </StackPanel>
                    </ui:Button>

                    <ui:Button Command="{Binding ShowAboutCommand}" ToolTip="About Quintilink" Background="Transparent" VerticalAlignment="Center" Padding="6,4" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Info16" FontSize="16" Margin="0,0,4,0"/>
                            <TextBlock Text="About" FontSize="11" FontWeight="SemiBold"/>
                        </StackPanel>
                    </ui:Button>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <ui:SymbolIcon Width="14" Height="14" Margin="0,0,6,0">
                            <ui:SymbolIcon.Style>
                                <Style TargetType="ui:SymbolIcon">
                                    <Setter Property="Symbol" Value="Dismiss12"/>
                                    <Setter Property="Foreground" Value="Red"/>
                                    <Setter Property="AutomationProperties.Name" Value="Disconnected"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                            <Setter Property="Symbol" Value="Checkmark12"/>
                                            <Setter Property="Foreground" Value="LimeGreen"/>
                                            <Setter Property="AutomationProperties.Name" Value="Connected"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ui:SymbolIcon.Style>
                        </ui:SymbolIcon>

                        <TextBlock VerticalAlignment="Center" FontWeight="SemiBold" Text="{Binding ServerStatus}" ToolTip="{Binding ServerStatusTooltip}"/>
                    </StackPanel>
                </WrapPanel>
            </Grid>
        </ui:Card>

        <!-- Log & Data View -->
        <Grid Grid.Row="2" Margin="10,2,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <ui:Card Grid.Column="0" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="1" Margin="0,6,0,0" HorizontalAlignment="Right">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Row="0" Grid.Column="0"
                                 Width="160"
                                 Height="30"
                                 Margin="0,0,10,0"
                                 Padding="8,2,8,4"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding LogFilterText, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Filter log text" />

                        <WrapPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <CheckBox Content="Regex" Style="{StaticResource LogFilterCheckBoxStyle}" Margin="0,0,14,0" IsChecked="{Binding UseRegexLogFilter}"/>
                            <CheckBox Content="RX" Style="{StaticResource LogFilterCheckBoxStyle}" IsChecked="{Binding ShowRxLogs}"/>
                            <CheckBox Content="TX" Style="{StaticResource LogFilterCheckBoxStyle}" IsChecked="{Binding ShowTxLogs}"/>
                            <CheckBox Content="SYS" Style="{StaticResource LogFilterCheckBoxStyle}" IsChecked="{Binding ShowSysLogs}"/>
                            <CheckBox Content="ERR" Style="{StaticResource LogFilterCheckBoxStyle}" IsChecked="{Binding ShowErrLogs}"/>
                            <CheckBox Content="Bookmarked" Style="{StaticResource LogFilterCheckBoxStyle}" Margin="0" IsChecked="{Binding ShowBookmarkedOnly}"/>
                        </WrapPanel>

                        <WrapPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,6,0,0" ItemHeight="30">
                            <ui:Button Command="{Binding ClearLogFiltersCommand}" ToolTip="Reset log filters" Style="{StaticResource HeaderIconButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="FilterDismiss24" FontSize="14" Margin="0,0,4,0"/>
                                    <TextBlock Text="Reset" FontSize="11" FontWeight="SemiBold"/>
                                </StackPanel>
                            </ui:Button>
                            <ui:Button Command="{Binding SearchHexPatternCommand}" ToolTip="Search hex pattern in log" Style="{StaticResource HeaderIconButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="Search16" FontSize="14" Margin="0,0,4,0"/>
                                    <TextBlock Text="Search" FontSize="11" FontWeight="SemiBold"/>
                                </StackPanel>
                            </ui:Button>
                            <ui:Button Command="{Binding AddBookmarkCommand}" ToolTip="Add bookmark at current position" Style="{StaticResource HeaderIconButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="BookmarkMultiple24" FontSize="14" Margin="0,0,4,0"/>
                                    <TextBlock Text="Bookmark" FontSize="11" FontWeight="SemiBold"/>
                                </StackPanel>
                            </ui:Button>
                            <ui:Button Command="{Binding ExportLogCommand}" ToolTip="Export log to file" Style="{StaticResource HeaderIconButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="ArrowDownload16" FontSize="14" Margin="0,0,4,0"/>
                                    <TextBlock Text="Export" FontSize="11" FontWeight="SemiBold"/>
                                </StackPanel>
                            </ui:Button>
                            <ui:Button Command="{Binding ClearLogCommand}" ToolTip="Clear log" Style="{StaticResource HeaderIconButtonStyle}" Margin="0">
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Symbol="Delete16" FontSize="14" Margin="0,0,4,0"/>
                                    <TextBlock Text="Clear" FontSize="11" FontWeight="SemiBold"/>
                                </StackPanel>
                            </ui:Button>
                        </WrapPanel>
                    </Grid>

                    <RichTextBox x:Name="LogRichTextBox" Grid.Row="0"
                                 PreviewMouseMove="LogRichTextBox_PreviewMouseMove"
                                 MouseLeave="LogRichTextBox_MouseLeave"
                                 PreviewMouseLeftButtonDown="LogRichTextBox_PreviewMouseLeftButtonDown"
                                 local:RichTextBoxHelper.Document="{Binding LogDocument}"
                                 IsReadOnly="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Background="#FFFFFF"
                                 BorderBrush="#DDD"
                                 BorderThickness="1"
                                 Margin="0,0,0,0"
                                 local:AutoScrollBehavior.AutoScroll="True"/>
                </Grid>
            </ui:Card> 

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Transparent" ShowsPreview="False"/>

            <ui:Card Grid.Column="2" VerticalContentAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,0,0,0">
                <TabControl>
                    <TabItem ToolTip="Predefined Messages" Width="Auto">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="TextBox16" Margin="0,0,5,0"/>
                                <TextBlock>Predefined messages</TextBlock>
                            </StackPanel>
                        </TabItem.Header>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ListBox x:Name="msgList" ItemsSource="{Binding PredefinedMessages}" Margin="0,0,0,10" BorderBrush="#DDD" BorderThickness="1"
                                     VerticalContentAlignment="Stretch" VerticalAlignment="Stretch">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="5,3"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <EventSetter Event="MouseDoubleClick" Handler="ListBoxItem_MouseDoubleClick"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Text="{Binding Name}" FontWeight="SemiBold" FontSize="13"/>

                                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,2,0,0">
                                                <TextBlock Text="ASCII: " FontSize="11" Foreground="Gray"/>
                                                <TextBlock Text="{Binding DisplayAscii}" FontSize="11" FontFamily="Consolas"/>
                                            </StackPanel>

                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,2,0,0">
                                                <TextBlock Text="HEX: " FontSize="11" Foreground="Gray"/>
                                                <TextBlock Text="{Binding DisplayHex}" FontSize="11" FontFamily="Consolas"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                <ui:Button Command="{Binding SendMessageCommand}" CommandParameter="{Binding SelectedItem, ElementName=msgList}" ToolTip="Send predefined message"
                                           Margin="2,0" Padding="2" Background="Transparent">
                                    <ui:SymbolIcon Symbol="Send16" FontSize="24"/>
                                </ui:Button>
                                <ui:Button Command="{Binding CompareMessagesCommand}" ToolTip="Compare two messages"
                                           Margin="2,0" Padding="2" Background="Transparent">
                                    <ui:SymbolIcon Symbol="ColumnDoubleCompare20" FontSize="24"/>
                                </ui:Button>
                                <ui:Button Command="{Binding AddMessageCommand}" ToolTip="Add predefined message"
                                           Margin="2,0" Padding="2" Background="Transparent">
                                    <ui:SymbolIcon Symbol="Add16" FontSize="24"/>
                                </ui:Button>
                                <ui:Button Command="{Binding EditMessageCommand}" CommandParameter="{Binding SelectedItem, ElementName=msgList}" ToolTip="Edit predefined message"
                                           Margin="2,0" Padding="2" Background="Transparent">
                                    <ui:SymbolIcon Symbol="Edit16" FontSize="24"/>
                                </ui:Button>
                                <ui:Button Command="{Binding DeleteMessageCommand}" CommandParameter="{Binding SelectedItem, ElementName=msgList}" ToolTip="Delete predefined message"
                                           Margin="2,0" Padding="2" Background="Transparent">
                                    <ui:SymbolIcon Symbol="Delete16" FontSize="24"/>
                                </ui:Button>
                            </StackPanel>
                        </Grid>
                    </TabItem>

                    <TabItem ToolTip="Reactions" Width="Auto">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="ArrowSwap20" Margin="0,0,5,0"/>
                                <TextBlock>Auto responses</TextBlock>
                            </StackPanel>
                        </TabItem.Header>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ListBox ItemsSource="{Binding Reactions}" Margin="0,0,0,10" BorderBrush="#DDD" BorderThickness="1" x:Name="reactionsList"
                                     VerticalContentAlignment="Stretch" VerticalAlignment="Stretch">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="5,3"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Pause / Play toggle button -->
                                            <ui:Button Grid.Column="0"
                                                       Command="{Binding DataContext.TogglePauseReactionCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                       CommandParameter="{Binding}"
                                                       ToolTip="Pause / resume auto-response"
                                                       Padding="4" Margin="0,0,6,0" Background="Transparent" VerticalAlignment="Center">
                                                <ui:SymbolIcon FontSize="14">
                                                    <ui:SymbolIcon.Style>
                                                        <Style TargetType="ui:SymbolIcon">
                                                            <Setter Property="Symbol" Value="Pause16"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Response.IsPaused}" Value="True">
                                                                    <Setter Property="Symbol" Value="Play16"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ui:SymbolIcon.Style>
                                                </ui:SymbolIcon>
                                            </ui:Button>

                                            <Grid Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Text="{Binding Response.Name}" FontWeight="SemiBold" FontSize="13">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Response.IsPaused}" Value="True">
                                                                    <Setter Property="Opacity" Value="0.5"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>

                                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock Text="Trigger: " FontSize="11" Foreground="Gray"/>
                                                    <TextBlock Text="{Binding Trigger}" FontSize="11" FontFamily="Consolas"/>
                                                </StackPanel>

                                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock Text="ASCII: " FontSize="11" Foreground="Gray"/>
                                                    <TextBlock Text="{Binding Response.DisplayAscii}" FontSize="11" FontFamily="Consolas"/>
                                                </StackPanel>

                                                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock Text="HEX: " FontSize="11" Foreground="Gray"/>
                                                    <TextBlock Text="{Binding Response.DisplayHex}" FontSize="11" FontFamily="Consolas"/>
                                                </StackPanel>

                                                <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock Text="Priority: " FontSize="11" Foreground="Gray"/>
                                                    <TextBlock Text="{Binding Response.Priority}" FontSize="11"/>
                                                    <TextBlock Text="  •  Stop after match: " FontSize="11" Foreground="Gray" Margin="8,0,0,0"/>
                                                    <TextBlock Text="{Binding Response.StopAfterMatch}" FontSize="11"/>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                <ui:Button Command="{Binding AddReactionCommand}" ToolTip="Add reaction" Margin="2,0" Padding="2" Background="Transparent">
                                    <ui:SymbolIcon Symbol="Add16" FontSize="24"/>
                                </ui:Button>
                                <ui:Button Command="{Binding EditReactionCommand}" CommandParameter="{Binding SelectedItem, ElementName=reactionsList}" ToolTip="Edit selected reaction"
                                           Margin="2,0" Padding="2" Background="Transparent">
                                    <ui:SymbolIcon Symbol="Edit16" FontSize="24"/>
                                </ui:Button>
                                <ui:Button Command="{Binding DeleteReactionCommand}" CommandParameter="{Binding SelectedItem, ElementName=reactionsList}" ToolTip="Delete selected reaction"
                                           Margin="2,0" Padding="2" Background="Transparent">
                                    <ui:SymbolIcon Symbol="Delete16" FontSize="24"/>
                                </ui:Button>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </ui:Card>
        </Grid>

        <!-- Quick Send Field -->
        <ui:Card Grid.Row="3" Margin="10,2,10,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0"
                              IsEditable="True"
                              StaysOpenOnEdit="True"
                              ItemsSource="{Binding QuickSendHistory}"
                              Text="{Binding QuickSendText, UpdateSourceTrigger=PropertyChanged}"
                              VerticalAlignment="Center"
                              Height="35"
                              FontSize="13"
                              FontFamily="Consolas"
                              Padding="10,8"
                              Margin="0,0,10,0"
                              ToolTip="Quick Send supports mixed input: ASCII text plus hex bytes in &lt;...&gt; (e.g., HELLO&lt;0D 0A&gt;). Macros: &lt;CR&gt; &lt;LF&gt; &lt;TAB&gt; &lt;NULL&gt;."
                              x:Name="QuickSendTextBox">
                        <ComboBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding SendQuickMessageCommand}"/>
                        </ComboBox.InputBindings>
                        <ComboBox.Style>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <ui:Button Command="{Binding PinQuickSendSnippetCommand}" ToolTip="Pin current quick-send text" Height="35" Margin="0,0,8,0" Padding="10,8">
                            <ui:SymbolIcon Symbol="Pin16" FontSize="16"/>
                        </ui:Button>
                        <ui:Button Command="{Binding SendQuickMessageCommand}"
                                   ToolTip="Send message (Enter). Plain text sends as ASCII; embed hex bytes as &lt;0D 0A&gt;"
                                   Height="35"
                                   MinWidth="100"
                                   Padding="15,8">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Send24" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Send" FontSize="13" FontWeight="SemiBold"/>
                            </StackPanel>
                        </ui:Button>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1" Margin="0,6,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Margin="2,0,0,0" FontSize="11" Foreground="Gray"
                               VerticalAlignment="Center"
                               Text="Quick Send: ASCII text, hex bytes in &lt;...&gt; (e.g., HELLO&lt;0D 0A&gt;), macros: &lt;CR&gt; &lt;LF&gt;" />

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Pinned:" Foreground="Gray" FontSize="11" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <ComboBox Width="220" Height="30" ItemsSource="{Binding QuickSendPinnedSnippets}" SelectedItem="{Binding QuickSendText, Mode=TwoWay}" ToolTip="Pinned snippets"/>
                        <ui:Button Command="{Binding ClearQuickSendHistoryCommand}" ToolTip="Clear quick-send history" Margin="6,0,0,0" Padding="6,4" Height="30">
                            <ui:SymbolIcon Symbol="Delete16" FontSize="14"/>
                        </ui:Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </ui:Card>

    </Grid>
</ui:FluentWindow>
