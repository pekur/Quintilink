<ui:FluentWindow x:Class="Quintilink.Views.ResponseEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Response Editor" Height="330" Width="480"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">

    <Grid Background="#F3F3F3">
        <ui:Card VerticalAlignment="Stretch" VerticalContentAlignment="Stretch">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Name -->
                <TextBlock Text="Name:" Grid.Row="0" VerticalAlignment="Center" Margin="0,5,0,0"/>
                <TextBox Grid.Row="0" Margin="5" Grid.Column="1"
                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Trigger -->
                <TextBlock Text="Trigger (HEX):" Grid.Row="1" VerticalAlignment="Center" Margin="0,5,0,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" Margin="5"
                         Text="{Binding Trigger, UpdateSourceTrigger=PropertyChanged}" />

                <!-- ASCII -->
                <TextBlock Text="ASCII:" Grid.Row="2" VerticalAlignment="Center" Margin="0,10,0,0"/>
                <TextBox Grid.Row="2" Margin="5" Grid.Column="1"
                         Text="{Binding Ascii, UpdateSourceTrigger=PropertyChanged}" />

                <!-- HEX -->
                <TextBlock Text="HEX:" Grid.Row="3" VerticalAlignment="Center" Margin="0,10,0,0"/>
                <TextBox Grid.Row="3" Margin="5" Grid.Column="1"
                         Text="{Binding Hex, UpdateSourceTrigger=PropertyChanged}"
                         LostFocus="HexBox_LostFocus"
                         PreviewTextInput="HexBox_PreviewTextInput"
                         PreviewKeyDown="HexBox_PreviewKeyDown">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Setter Property="BorderBrush" Value="#DDD"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsHexValid}" Value="False">
                                    <Setter Property="BorderBrush" Value="Red"/>
                                    <Setter Property="ToolTip" Value="Invalid HEX format"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Delay -->
                <TextBlock Text="Delay [ms]:" Grid.Row="4" VerticalAlignment="Center" Margin="0,10,0,0"/>
                <TextBox Grid.Row="4" Margin="5" Grid.Column="1"
                         Text="{Binding DelayMs, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Setter Property="BorderBrush" Value="#DDD"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDelayValid}" Value="False">
                                    <Setter Property="BorderBrush" Value="Red"/>
                                    <Setter Property="ToolTip" Value="Delay must be a positive number"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Buttons -->
                <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0" 
                            Grid.ColumnSpan="2">
                    <Button Content="OK" IsDefault="True" Margin="5"
                            Command="{Binding SaveCommand}"
                            IsEnabled="{Binding IsValid}" />
                    <Button Content="Cancel" IsCancel="True" Margin="5"
                            Command="{Binding CancelCommand}" />
                </StackPanel>
            </Grid>
        </ui:Card>
    </Grid>
</ui:FluentWindow>
