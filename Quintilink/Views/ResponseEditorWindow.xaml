<ui:FluentWindow x:Class="Quintilink.Views.ResponseEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Response Editor" SizeToContent="Height" Width="640"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">

    <ui:FluentWindow.InputBindings>
        <KeyBinding Modifiers="Control" Key="Enter" Command="{Binding SaveCommand}"/>
    </ui:FluentWindow.InputBindings>

    <Grid Background="#F3F3F3">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ui:Card Grid.Row="0" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" Margin="0,0,0,1">
            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Name:" Grid.Row="0" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"
                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Friendly name shown in the responses list"/>

                <TextBlock Text="Trigger (HEX):" Grid.Row="1" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"
                         Text="{Binding Trigger, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Example: 02 10 FF" />
                <TextBlock Grid.Row="2" Grid.Column="1" FontSize="11" Foreground="#C42B1C" Margin="2,-4,0,6"
                           Text="Trigger HEX must be valid pairs (e.g., 02 10 FF).">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsTriggerValid}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Text="Trigger (ASCII):" Grid.Row="3" VerticalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="1" Margin="0,0,0,8"
                         Text="{Binding TriggerAscii, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Supports macros like &lt;CR&gt;, &lt;LF&gt;, &lt;STX&gt;, &lt;ETX&gt;" />

                <TextBlock Text="Response (ASCII):" Grid.Row="4" VerticalAlignment="Center"/>
                <TextBox Grid.Row="4" Grid.Column="1" Margin="0,0,0,8"
                         Text="{Binding Ascii, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Supports macros like &lt;CR&gt;, &lt;LF&gt;, &lt;STX&gt;, &lt;ETX&gt;" />

                <TextBlock Text="Response (HEX):" Grid.Row="5" VerticalAlignment="Center"/>
                <TextBox Grid.Row="5" Grid.Column="1" Margin="0,0,0,8"
                         Text="{Binding Hex, UpdateSourceTrigger=PropertyChanged}"
                         LostFocus="HexBox_LostFocus"
                         PreviewTextInput="HexBox_PreviewTextInput"
                         PreviewKeyDown="HexBox_PreviewKeyDown"
                         ToolTip="Example: 48 45 4C 4C 4F">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Setter Property="BorderBrush" Value="#DDD"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsHexValid}" Value="False">
                                    <Setter Property="BorderBrush" Value="Red"/>
                                    <Setter Property="ToolTip" Value="Invalid HEX format"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <TextBlock Grid.Row="6" Grid.Column="1" FontSize="11" Foreground="#C42B1C" Margin="2,-4,0,6"
                           Text="Response HEX must contain valid byte pairs.">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsHexValid}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Text="Delay (ms):" Grid.Row="7" VerticalAlignment="Center"/>
                <TextBox Grid.Row="7" Grid.Column="1" Margin="0,0,0,8"
                         Text="{Binding DelayMs, UpdateSourceTrigger=PropertyChanged}"
                         PreviewTextInput="NumericBox_PreviewTextInput"
                         PreviewKeyDown="NumericBox_PreviewKeyDown"
                         ToolTip="Non-negative integer">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Setter Property="BorderBrush" Value="#DDD"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDelayValid}" Value="False">
                                    <Setter Property="BorderBrush" Value="Red"/>
                                    <Setter Property="ToolTip" Value="Delay must be a positive number"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <TextBlock Grid.Row="8" Grid.Column="1" FontSize="11" Foreground="#C42B1C" Margin="2,-4,0,6"
                           Text="Delay must be a non-negative integer.">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDelayValid}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Text="Execution Priority:" Grid.Row="9" VerticalAlignment="Center"/>
                <TextBox Grid.Row="9" Grid.Column="1" Margin="0,0,0,8"
                         Text="{Binding Priority, UpdateSourceTrigger=PropertyChanged}"
                         PreviewTextInput="NumericBox_PreviewTextInput"
                         PreviewKeyDown="NumericBox_PreviewKeyDown"
                         ToolTip="Higher value runs first">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Setter Property="BorderBrush" Value="#DDD"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsPriorityValid}" Value="False">
                                    <Setter Property="BorderBrush" Value="Red"/>
                                    <Setter Property="ToolTip" Value="Priority must be an integer"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <TextBlock Text="Stop processing other matches:" Grid.Row="10" VerticalAlignment="Center"/>
                <CheckBox Grid.Row="10" Grid.Column="1" Margin="0,0,0,8" VerticalAlignment="Center"
                          IsChecked="{Binding StopAfterMatch}" />

                <Border Grid.Row="11" Grid.ColumnSpan="2" BorderThickness="1" BorderBrush="#E0E0E0" CornerRadius="4" Padding="8" Margin="0,4,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <TextBlock FontSize="11" Foreground="Gray" Text="Macro helper"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <ComboBox Width="120" ItemsSource="{Binding AsciiMacroOptions}" SelectedItem="{Binding SelectedAsciiMacro}"/>
                                <ui:Button Command="{Binding InsertAsciiMacroToPayloadCommand}" Margin="8,0,0,0" Padding="8,4">Insert to Response ASCII</ui:Button>
                                <ui:Button Command="{Binding InsertAsciiMacroToTriggerCommand}" Margin="6,0,0,0" Padding="8,4">Insert to Trigger ASCII</ui:Button>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="Summary" FontSize="11" Foreground="Gray"/>
                            <TextBlock Text="{Binding PayloadByteCount, StringFormat=Payload bytes: {0}}" FontSize="11"/>
                            <TextBlock Text="{Binding TriggerByteCount, StringFormat=Trigger bytes: {0}}" FontSize="11"/>
                        </StackPanel>
                    </Grid>
                </Border>

            </Grid>
        </ui:Card>

        <Border Grid.Row="1" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0" Background="White" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" IsDefault="True" MinWidth="80" Padding="10,6" Margin="0,0,10,0"
                        Command="{Binding SaveCommand}"
                        IsEnabled="{Binding IsValid}" />
                <Button Content="Cancel" IsCancel="True" MinWidth="80" Padding="10,6"
                        Command="{Binding CancelCommand}" />
            </StackPanel>
        </Border>
    </Grid>
</ui:FluentWindow>
