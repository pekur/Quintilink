<ui:FluentWindow x:Class="Quintilink.Views.MessageEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Message Editor"  SizeToContent="Height" Width="540"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">

    <ui:FluentWindow.InputBindings>
        <KeyBinding Modifiers="Control" Key="Enter" Command="{Binding SaveCommand}"/>
    </ui:FluentWindow.InputBindings>

    <ui:Card VerticalAlignment="Stretch" VerticalContentAlignment="Stretch">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Name:" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"
                     Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Friendly name shown in predefined messages"/>

            <TextBlock Grid.Column="0" Grid.Row="1" Text="ASCII:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Ascii, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"
                     ToolTip="Supports macros like &lt;CR&gt;, &lt;LF&gt;, &lt;STX&gt;, &lt;ETX&gt;" />

            <TextBlock Grid.Column="0" Text="HEX:" Grid.Row="2" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Grid.Row="2" Margin="0,0,0,8"
                         Text="{Binding Hex, UpdateSourceTrigger=PropertyChanged}"
                         LostFocus="HexBox_LostFocus"
                         PreviewTextInput="HexBox_PreviewTextInput"
                         PreviewKeyDown="HexBox_PreviewKeyDown"
                         ToolTip="Example: 48 45 4C 4C 4F">
                <TextBox.Style>
                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                        <Setter Property="BorderBrush" Value="#DDD"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsHexValid}" Value="False">
                                <Setter Property="BorderBrush" Value="Red"/>
                                <Setter Property="ToolTip" Value="Invalid HEX format"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <TextBlock Grid.Row="3" Grid.Column="1" FontSize="11" Foreground="#C42B1C" Margin="2,-4,0,6"
                       Text="HEX must contain valid byte pairs (e.g., 0A 0D FF).">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsHexValid}" Value="False">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <Border Grid.Row="4" Grid.ColumnSpan="2" BorderThickness="1" BorderBrush="#E0E0E0" CornerRadius="4" Padding="8" Margin="0,4,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock FontSize="11" Foreground="Gray" Text="Macro helper"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <ComboBox Width="120" ItemsSource="{Binding AsciiMacroOptions}" SelectedItem="{Binding SelectedAsciiMacro}"/>
                            <ui:Button Command="{Binding InsertAsciiMacroCommand}" Margin="8,0,0,0" Padding="8,4">Insert to ASCII</ui:Button>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                        <TextBlock Text="Summary" FontSize="11" Foreground="Gray"/>
                        <TextBlock Text="{Binding PayloadByteCount, StringFormat=Bytes: {0}}" FontSize="11"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
                <Button Content="OK" IsDefault="True" Margin="5"
                            Command="{Binding SaveCommand}"
                            IsEnabled="{Binding IsValid}" />
                <Button Content="Cancel" IsCancel="True" Margin="5"
                            Command="{Binding CancelCommand}" />
            </StackPanel>
        </Grid>
    </ui:Card>
</ui:FluentWindow>
