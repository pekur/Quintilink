<ui:FluentWindow x:Class="Quintilink.Views.MessageEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Message Editor"  Height="280" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">

    <ui:FluentWindow.Resources>
    </ui:FluentWindow.Resources>

    <ui:Card VerticalAlignment="Stretch" VerticalContentAlignment="Stretch">
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Name -->
            <TextBlock Text="Name:" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Margin="0,5,5,0"/>
            <TextBox Grid.Row="0"   Grid.Column="1" Text="{Binding Name}" Margin="5"/>

            <!-- ASCII -->
            <TextBlock Grid.Column="0" Grid.Row="1" Text="ASCII:" VerticalAlignment="Center" Margin="0,10,5,0"/>
            <TextBox  Grid.Column="1" Grid.Row="1" Text="{Binding Ascii, UpdateSourceTrigger=PropertyChanged}" Margin="5" />

            <!-- HEX -->
            <TextBlock Grid.Column="0" Text="HEX:" Grid.Row="2" VerticalAlignment="Center" Margin="0,10,5,0"/>
            <TextBox Grid.Column="1" Grid.Row="2" Margin="5"
                         Text="{Binding Hex, UpdateSourceTrigger=PropertyChanged}"
                         LostFocus="HexBox_LostFocus"
                         PreviewTextInput="HexBox_PreviewTextInput"
                         PreviewKeyDown="HexBox_PreviewKeyDown">
                <TextBox.Style>
                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                        <Setter Property="BorderBrush" Value="#DDD"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsHexValid}" Value="False">
                                <Setter Property="BorderBrush" Value="Red"/>
                                <Setter Property="ToolTip" Value="Invalid HEX format"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <!-- Buttons -->
            <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <Button Content="OK" IsDefault="True" Margin="5"
                            Command="{Binding SaveCommand}"
                            IsEnabled="{Binding IsValid}" />
                <Button Content="Cancel" IsCancel="True" Margin="5"
                            Command="{Binding CancelCommand}" />
            </StackPanel>
        </Grid>
    </ui:Card>
</ui:FluentWindow>
