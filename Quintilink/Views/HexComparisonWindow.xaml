<ui:FluentWindow x:Class="Quintilink.Views.HexComparisonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:Quintilink.ViewModels"
        mc:Ignorable="d"
        Title="Hex Comparison" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        ExtendsContentIntoTitleBar="True"
        WindowStyle="None"
        d:DataContext="{d:DesignInstance Type=vm:HexComparisonViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" Title="Hex Comparison" Icon="SlideTextSparkle24" />

        <!-- Message Selection -->
        <ui:Card Grid.Row="1" Margin="15,15,15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Message 1 -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Message 1" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding AvailableMessages}"
                              SelectedItem="{Binding Message1}"
                              DisplayMemberPath="Name"
                              MinHeight="35"/>
                </StackPanel>

                <!-- VS Icon -->
                <TextBlock Grid.Column="1" Text="?" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,0"/>

                <!-- Message 2 -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Message 2" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding AvailableMessages}"
                              SelectedItem="{Binding Message2}"
                              DisplayMemberPath="Name"
                              MinHeight="35"/>
                </StackPanel>
            </Grid>
        </ui:Card>

        <!-- Comparison Results -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="15,0">
            <StackPanel>
                <!-- Summary Card -->
                <ui:Card Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Comparison Summary" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Total Bytes" Foreground="Gray" FontSize="11"/>
                                <TextBlock Text="{Binding TotalBytes}" FontSize="20" FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Different Bytes" Foreground="Gray" FontSize="11"/>
                                <TextBlock Text="{Binding DifferentBytes}" FontSize="20" FontWeight="Bold" Foreground="Red"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Similarity" Foreground="Gray" FontSize="11"/>
                                <TextBlock Text="{Binding SimilarityPercentage, StringFormat='{}{0:F1}%'}" FontSize="20" FontWeight="Bold" Foreground="Green"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ui:Card>

                <!-- Hex View Card -->
                <ui:Card Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Hex View" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Message 1 Hex -->
                            <Border Grid.Row="0" BorderBrush="#DDD" BorderThickness="1" Padding="10" Margin="0,0,0,5" Background="#F9F9F9">
                                <StackPanel>
                                    <TextBlock Text="Message 1" Foreground="Gray" FontSize="11" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding Message1Hex}" FontFamily="Consolas" TextWrapping="Wrap" FontSize="12"/>
                                </StackPanel>
                            </Border>

                            <!-- Message 2 Hex -->
                            <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="1" Padding="10" Background="#F9F9F9">
                                <StackPanel>
                                    <TextBlock Text="Message 2" Foreground="Gray" FontSize="11" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding Message2Hex}" FontFamily="Consolas" TextWrapping="Wrap" FontSize="12"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </ui:Card>

                <!-- Differences Card -->
                <ui:Card Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Differences" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        
                        <ListBox ItemsSource="{Binding Differences}" 
                                 MaxHeight="200"
                                 BorderBrush="#DDD" 
                                 BorderThickness="1">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <TextBlock Text="{Binding Position, StringFormat='Pos {0}:'}" 
                                                   Width="60" 
                                                   FontFamily="Consolas"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Byte1, StringFormat='[{0:X2}]', TargetNullValue='[--]'}" 
                                                   Width="50" 
                                                   FontFamily="Consolas"
                                                   Foreground="#0451b5"
                                                   Margin="5,0"/>
                                        <TextBlock Text="?" Margin="5,0" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Byte2, StringFormat='[{0:X2}]', TargetNullValue='[--]'}" 
                                                   Width="50" 
                                                   FontFamily="Consolas"
                                                   Foreground="#21873a"
                                                   Margin="5,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </ui:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="3" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0" Background="White" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Close" Click="CloseButton_Click" MinWidth="80" Padding="10,6"/>
            </StackPanel>
        </Border>
    </Grid>
</ui:FluentWindow>
