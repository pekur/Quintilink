<ui:FluentWindow x:Class="Quintilink.Views.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:Quintilink.ViewModels"
        mc:Ignorable="d"
        Title="Connection Statistics" 
        Height="450" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ExtendsContentIntoTitleBar="True"
        WindowStyle="None"
        d:DataContext="{d:DesignInstance Type=vm:StatisticsViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" Title="Connection Statistics" Icon="DataBarVertical24" />

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Connection Status -->
                <ui:Card Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Connection Status" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Duration" Foreground="Gray" FontSize="12"/>
                                <TextBlock Text="{Binding ConnectionDuration}" FontSize="20" FontWeight="Bold" Margin="0,2,0,0"/>
                            </StackPanel>

                            <Ellipse Grid.Column="1" Width="16" Height="16" VerticalAlignment="Center" Margin="10,0,0,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="Red"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                <Setter Property="Fill" Value="LimeGreen"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                        </Grid>
                    </StackPanel>
                </ui:Card>

                <!-- Data Transfer Summary -->
                <ui:Card Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Data Transfer" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Received -->
                            <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,15">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <ui:SymbolIcon Symbol="ArrowDownload16" FontSize="14" Foreground="#21873a" Margin="0,0,5,0"/>
                                    <TextBlock Text="Received" Foreground="Gray" FontSize="12" FontWeight="SemiBold"/>
                                </StackPanel>
                                <TextBlock Text="{Binding BytesReceived, StringFormat='{}{0:N0} bytes'}" FontSize="16" FontWeight="Bold" Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding MessagesReceived, StringFormat='{}{0:N0} messages'}" Foreground="Gray" FontSize="11" Margin="0,2,0,0"/>
                            </StackPanel>

                            <!-- Sent -->
                            <StackPanel Grid.Column="1" Grid.Row="0" Margin="10,0,0,15">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <ui:SymbolIcon Symbol="ArrowUpload16" FontSize="14" Foreground="#0451b5" Margin="0,0,5,0"/>
                                    <TextBlock Text="Sent" Foreground="Gray" FontSize="12" FontWeight="SemiBold"/>
                                </StackPanel>
                                <TextBlock Text="{Binding BytesSent, StringFormat='{}{0:N0} bytes'}" FontSize="16" FontWeight="Bold" Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding MessagesSent, StringFormat='{}{0:N0} messages'}" Foreground="Gray" FontSize="11" Margin="0,2,0,0"/>
                            </StackPanel>

                            <!-- Total -->
                            <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" 
                                    BorderThickness="0,1,0,0" BorderBrush="#E0E0E0" 
                                    Padding="0,10,0,0">
                                <StackPanel>
                                    <TextBlock Text="Total" Foreground="Gray" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding TotalBytes, StringFormat='{}{0:N0} bytes'}" FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Grid.Column="1" Text="{Binding TotalMessages, StringFormat='{}{0:N0} messages'}" FontSize="16" FontWeight="Bold"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </ui:Card>

                <!-- Throughput -->
                <ui:Card Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Throughput" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Received" Foreground="Gray" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding BytesPerSecondReceived, StringFormat='{}{0} B/s'}" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Sent" Foreground="Gray" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding BytesPerSecondSent, StringFormat='{}{0} B/s'}" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ui:Card>

                <!-- Average Message Size -->
                <ui:Card>
                    <StackPanel>
                        <TextBlock Text="Average Message Size" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Received" Foreground="Gray" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding AverageMessageSizeReceived, StringFormat='{}{0} bytes'}" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Sent" Foreground="Gray" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding AverageMessageSizeSent, StringFormat='{}{0} bytes'}" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ui:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</ui:FluentWindow>
