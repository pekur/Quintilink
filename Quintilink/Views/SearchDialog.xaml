<ui:FluentWindow x:Class="Quintilink.Views.SearchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:Quintilink.ViewModels"
        mc:Ignorable="d"
        Title="Search Log" 
        Height="280" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ExtendsContentIntoTitleBar="True"
        WindowStyle="None"
        ResizeMode="NoResize"
        d:DataContext="{d:DesignInstance Type=vm:SearchDialogViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" Title="Search Log" Icon="Search24" />

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="20">
            <!-- Search Pattern -->
            <TextBlock Text="Search Pattern" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding SearchPattern, UpdateSourceTrigger=PropertyChanged}" 
                     Height="35" 
                     FontSize="14"
                     VerticalContentAlignment="Center"
                     Margin="0,0,0,15"
                     x:Name="SearchPatternTextBox">
                <TextBox.InputBindings>
                    <KeyBinding Key="Return" Command="{Binding SearchCommand}"/>
                </TextBox.InputBindings>
            </TextBox>

            <!-- Direction Filter -->
            <TextBlock Text="Direction" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding Directions}"
                      SelectedItem="{Binding SelectedDirection}"
                      Height="35"
                      Margin="0,0,0,15"/>

            <!-- Options -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <CheckBox Content="Case Sensitive" 
                          IsChecked="{Binding CaseSensitive}"
                          Margin="0,0,20,0"
                          VerticalAlignment="Center"/>
                <CheckBox Content="Use Regular Expression" 
                          IsChecked="{Binding UseRegex}"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- Action Buttons -->
        <Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0" Background="White" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Search" 
                        Command="{Binding SearchCommand}"
                        IsDefault="True"
                        MinWidth="80" 
                        Padding="10,6" 
                        Margin="0,0,10,0"/>
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}"
                        IsCancel="True"
                        MinWidth="80" 
                        Padding="10,6"/>
            </StackPanel>
        </Border>
    </Grid>
</ui:FluentWindow>
